<div class="">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                {{ page.navigation }}
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                {% if page.navigation_collapsible %}
                    {{ page.navigation_collapsible }}
                {% endif %}
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <header class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                {% if page.header %}
                    {{ page.header }}
                {% endif %}
            </div>
        </div>
    </header>

    <section class="container communication paddingtop">
        <div class="row">
            <div class="col-sm-12">
                {% if page.highlighted %}
                    {{ page.highlighted }}
                {% endif %}
            </div>
        </div>
    </section>

    <section class="container content-wrap paddingtop">
        <div class="row">
            <div class="col-sm-12">
                {% if page.highlighted %}
                    <div id="highlighted">{{ page.highlighted }}</div>{% endif %}
                <a id="main-content"></a>

                {{ title_prefix }}
                {% if title %}
                    <h1 class="title" id="page-title">
                        {{ title }}
                    </h1>
                {% endif %}
                {{ title_suffix }}

                {% if tabs %}
                    <nav class="tabs" role="navigation">
                        {{ tabs }}
                    </nav>
                {% endif %}

                {{ page.help }}
                {% if action_links %}
                    <ul class="action-links">
                        {{ action_links }}
                    </ul>
                {% endif %}

                {{ page.content }}

            </div>
        </div>
    </section>

    <section class="container leftright paddingtop">
        <div class="row">
            <div class="col-sm-9">
                {% if page.sidebar_first %}
                    {{ page.sidebar_first }}
                {% endif %}
            </div>
            <div class="col-sm-3">
                {% if page.sidebar_second %}
                    {{ page.sidebar_second }}
                {% endif %}
            </div>
        </div>
    </section>

    <footer class="container-fluid paddingtop">
        <div class="row">
            <div class="col-sm-6">Copyright 2017</div>
            <div class="col-sm-6 text-right"><i class="fa fa-facebook"></i> Sociale Media</div>
        </div>
    </footer>

</div>